## Set environment
SetEnvIfNoCase Host "^localhost" LOCAL_HOST
SetEnvIfNoCase Host "^127.0.0.1" LOCAL_HOST
SetEnvIfNoCase Host "^" CI_ENV=development WPD_URL=0
SetEnvIfNoCase Host "cafpe\.ugr\.es" CI_ENV=production
SetEnvIfNoCase Host "wpd\.ugr\.es" CI_ENV=production WPD_URL=1
# If URL begins with wpd.ugr.es/~pabloguaza, STAGING_SERVER=true
SetEnvIf Request_URI "^/\~pabloguaza" CI_ENV=staging BASE_PATH=/\~pabloguaza STAGING_SERVER
# else STAGING_SERVER = false
SetEnvIf WPD_URL 0 !STAGING_SERVER

## Remove index.php from URLS
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ %{ENV:BASE_PATH}/index.php/$1 [L]

<Files "main.min.js">
  Header set SourceMap "http://localhost:8020/assets/dist/jscripts/main.min.js.map" env=LOCAL_HOST
</Files>

<Files "main.vendors.min.js">
  Header set SourceMap "http://localhost:8020/assets/dist/jscripts/main.vendors.min.js.map" env=LOCAL_HOST
</Files>

<Files "admin.min.js">
  Header set SourceMap "http://localhost:8020/assets/dist/jscripts/admin.min.js.map" env=LOCAL_HOST
</Files>

<Files "admin.vendors.min.js">
  Header set SourceMap "http://localhost:8020/assets/dist/jscripts/admin.vendors.min.js.map" env=LOCAL_HOST
</Files>

<Files "main.css">
  Header set SourceMap "http://localhost:8020/assets/dist/styles/main.css.map" env=LOCAL_HOST
</Files>

## Basic auth for staging server
Deny from env=STAGING_SERVER
Satisfy any
AuthType Basic
AuthName "Auth Required"
Require valid-user
AuthUserFile /disk15/home/pabloguaza/public_html/.htpasswd

# Don't allow the .htpassword file to be shown to web users
<Files .htpasswd>
   Order allow,deny
   Deny from all
   Satisfy All
</Files>
