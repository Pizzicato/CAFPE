{
    "name": "cafpe-frontend",
    "version": "1.0.0",
    "description": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/Pizzicato/CAFPE.git"
    },
    "dependencies": {
        "autoprefixer": "^7.1.5",
        "bootstrap": "^4.0.0-beta",
        "bootstrap-datepicker": "^1.7.1",
        "clean-css-cli": "^4.1.10",
        "font-awesome": "^4.7.0",
        "imagemin-newer": "^1.0.2",
        "jquery": "^3.2.1",
        "jquery-validation": "^1.17.0",
        "node-sass": "^4.5.3",
        "npm-run-all": "^4.1.1",
        "popper.js": "^1.12.5",
        "postcss-cli": "^4.1.1",
        "uglify-js": "^3.1.3"
    },
    "devDependencies": {
        "browser-sync": "^2.18.13",
        "onchange": "^3.2.1"
    },
    "scripts": {
        "clean": "rm -rf html/assets/{fonts,img,jscripts,styles}/* && rm -rf html/assets/src/*/vendors",
        "makedirs": "mkdir -p html/assets/{fonts,img,jscripts,styles} html/assets/src/{fonts,img} html/assets/src/jscripts/vendors/ html/assets/src/styles/vendors/{bootstrap,font-awesome,bootstrap-datepicker}",
        "cp-assets": "cp node_modules/jquery/dist/jquery.js node_modules/popper.js/dist/umd/popper.js node_modules/bootstrap/dist/js/bootstrap.js node_modules/bootstrap-datepicker/dist/js/bootstrap-datepicker.js node_modules/jquery-validation/dist/jquery.validate.js html/assets/src/jscripts/vendors/ && cp -R node_modules/bootstrap/scss/* html/assets/src/styles/vendors/bootstrap && cp -R node_modules/font-awesome/scss/* html/assets/src/styles/vendors/font-awesome && cp node_modules/font-awesome/fonts/* html/assets/src/fonts/ && cp node_modules/bootstrap-datepicker/dist/css/bootstrap-datepicker.standalone.css html/assets/src/styles/vendors/bootstrap-datepicker",
        "prebuild": "run-s clean makedirs cp-assets",
        "build:jscripts": "uglifyjs html/assets/src/jscripts/vendors/jquery.js html/assets/src/jscripts/vendors/popper.js html/assets/src/jscripts/vendors/bootstrap.js html/assets/src/jscripts/vendors/bootstrap-datepicker.js html/assets/src/jscripts/vendors/jquery.validate.js html/assets/src/jscripts/*.js -o html/assets/jscripts/main.min.js -c -m --source-map \"base='./html/assets/src../'\"",
        "build:styles": "node-sass --source-map-embed --source-map-root file://${PWD}/ --output-style expanded html/assets/src/styles/main.scss | postcss -u autoprefixer -b 'latest 2 versions' -o html/assets/styles/main.css --map html/assets/styles/main.css.map && cleancss html/assets/styles/main.css -o html/assets/styles/main.min.css",
        "build:images": "imagemin-newer html/assets/src/img html/assets/img",
        "build:fonts": "cp html/assets/src/fonts/* html/assets/fonts/",
        "build": "run-s build:*",
        "serve": "browser-sync start --proxy 'localhost:8020' --files 'html/assets/jscripts/main.min.js, html/assets/styles/*.css' 'application/**/*.php'",
        "watch:styles": "onchange 'html/assets/src/styles/**/*' -- npm run build:styles",
        "watch:js": "onchange 'html/assets/src/jscripts/**/*.js' -- npm run build:jscripts",
        "watch:images": "onchange 'html/assets/src/img/**/*' -- npm run build:images",
        "watch:fonts": "onchange 'html/assets/src/fonts/*' -- npm run build:fonts",
        "watch": "run-p serve watch:*"
    },
    "author": "Pablo Guaza",
    "license": "ISC"
}
